@using Model.Material;

@{
    Layout = "~/Views/Shared/_Main.cshtml";
}
@using Common
<!-- Page Header -->

<div class="page-header">
    <div class="pull-left">
        <ol class="breadcrumb visible-sm visible-md visible-lg">
            <li><a href="#"><i class="icon fa fa-cogs"></i>Setting</a></li>
            <li><a href="#">Material Info</a></li>
        </ol>
    </div>
    <div class="pull-right"> 
    </div>
</div>
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="tabs">
        <ul class="nav nav-tabs" id="tabs">
            <li>
                <a id="btnbasicinfoTab" href="#basicinfoTab" data-toggle="tab"><i class="fa fa-archive"></i> Basic Info</a>
            </li>
            <li>
                <a id="btnwo1Tab" href="#wo1Tab" data-toggle="tab"><i class="fa fa-wrench"></i> Molding</a>
            </li>
            <li>
                <a id="btnwo2Tab" href="#wo2Tab" data-toggle="tab"><i class="fa fa-wrench"></i> Assy line</a>
            </li>
            <li>
                <a id="btnwo3Tab" href="#wo3Tab" data-toggle="tab"><i class="fa fa-wrench"></i> 3D blow molding</a>
            </li>
            <li>
                <a id="btnwo4Tab" href="#wo4Tab" data-toggle="tab"><i class="fa fa-wrench"></i> Foaming</a>
            </li>
        </ul>
        <div class="tab-content">
            <div id="basicinfoTab" class="tab-pane">
                <div class="panel panel-default bk-bg-white">
                    <div class="form-group">
                        <div class="col-xs-4">
                            <label class="col-md-4 help-block">Customer</label>
                            <div class="col-md-8 col">
                                <input type="text" id="customerIndex" name="text-input" class="form-control" placeholder="Customer">
                            </div>
                        </div>
                        <div class="col-xs-4">
                            <label class="col-md-4 help-block">RA SAP P/N</label>
                            <div class="col-md-8 col">
                                <input type="text" id="sappnIndex" name="text-input" class="form-control" placeholder="RA SAP P/N">
                            </div>
                        </div>
                        <div class="col-xs-4" style="padding-right:0px">
                            <label class="col-md-3 help-block">Part Name</label>
                            <div class="col-md-9 col" style="padding-right:0px">
                                <input type="text" id="productnameIndex" name="text-input" class="form-control" placeholder="Part Name">
                            </div>
                        </div>
                        <div class="col-xs-12" style="height:10px;"></div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-6">
                        </div>
                        <div class="col-xs-6" style="text-align:right;padding-right:0px">
                            <button type="button" class="bk-margin-left-5 btn btn-primary btn-sm" id="Search"><i class="fa fa-search"></i> Search</button>
                            <button type="button" class="bk-margin-left-5 btn btn-success btn-sm" href="#modalForm" id="addMaterial"><i class="fa fa-plus"></i> Add</button>
                            <button type="button" class="bk-margin-left-5 btn btn-warning btn-sm" href="#importSAP" id="importMaterial"><i class="fa fa-paperclip"></i> Import</button>
                            <a class="bk-margin-left-5 btn btn-danger btn-sm" id="btnExport"><i class="fa fa-mail-forward"></i> Export</a>
                            <button type="button" class="bk-margin-left-5 btn btn-success btn-sm hidden" href="#modalForm" id="editMaterial"><i class="fa fa-plus"></i> Edit</button>
                        </div>
                        <div class="col-xs-12" style="height:10px;"></div>
                    </div>
                    <div class="form-group" id="searchResult"></div>

                </div>
            </div>
            <div id="wo1Tab" class="tab-pane">
                @Html.Partial("Material1InfoIndex")
            </div>
            <div id="wo2Tab" class="tab-pane">
                @Html.Partial("Material2InfoIndex")
            </div>
            <div id="wo3Tab" class="tab-pane">
                @Html.Partial("Material3InfoIndex")
            </div>
            <div id="wo4Tab" class="tab-pane">
                @Html.Partial("Material4InfoIndex")
            </div>
        </div>
    </div> 
</div>
<input type="hidden" id="WorkOrderId" value="0" />
<input type="hidden" id="WorkOrderType" value="0" />
<div id="modalForm" class="modal-block modal-block-primary bigsize mfp-hide">
    <div class="panel panel-default">
        @Html.Partial("MaterialOperate")
    </div>
</div>

<div id="importSAP" class="modal-block modal-block-primary mfp-hide">
    <div class="panel panel-default">
        @Html.Partial("ImportSAP")
    </div>
</div>

<div id="workOrderModalForm" class="modal-block modal-block-primary bigsize mfp-hide">
    <div class="panel panel-default">
        @Html.Partial("MaterialWorkOrderAddAndEdit")
    </div>
</div>
<div id="importWorkOrderModal" class="modal-block modal-block-primary mfp-hide">
    <div class="panel panel-default">
        @Html.Partial("ImportWorkOrder")
    </div>
</div>

<script src="@Url.Content("~/Content/Material/Material.js")?v=@CommonHelper.JsVision()"></script>