@{
    Layout = null;
}
@using Common
<!DOCTYPE html>
<html lang="en">
<head>

    <!-- Basic -->
    <meta charset="UTF-8" />

    <title>Login | Fire - Admin Template</title>

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <!-- Favicon and touch icons -->
    <link rel="shortcut icon" href="@Url.Content("~/Content/assets/ico/favicon.ico")" type="image/x-icon" />
    <link rel="apple-touch-icon" href="@Url.Content("~/Content/assets/ico/apple-touch-icon.png")" />
    <link rel="apple-touch-icon" sizes="57x57" href="@Url.Content("~/Content/assets/ico/apple-touch-icon-57x57.png")" />
    <link rel="apple-touch-icon" sizes="72x72" href="@Url.Content("~/Content/assets/ico/apple-touch-icon-72x72.png")" />
    <link rel="apple-touch-icon" sizes="76x76" href="@Url.Content("~/Content/assets/ico/apple-touch-icon-76x76.png")" />
    <link rel="apple-touch-icon" sizes="114x114" href="@Url.Content("~/Content/assets/ico/apple-touch-icon-114x114.png")" />
    <link rel="apple-touch-icon" sizes="120x120" href="@Url.Content("~/Content/assets/ico/apple-touch-icon-120x120.png")" />
    <link rel="apple-touch-icon" sizes="144x144" href="@Url.Content("~/Content/assets/ico/apple-touch-icon-144x144.png")" />
    <link rel="apple-touch-icon" sizes="152x152" href="@Url.Content("~/Content/assets/ico/apple-touch-icon-152x152.png")" />

    <!-- start: CSS file-->
    <!-- Vendor CSS-->
    <link href="@Url.Content("~/Content/assets/vendor/bootstrap/css/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/assets/vendor/skycons/css/skycons.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/assets/vendor/font-awesome/css/font-awesome.min.css")" rel="stylesheet" />

    <!-- Plugins CSS-->
    <link href="@Url.Content("~/Content/assets/plugins/bootkit/css/bootkit.css")" rel="stylesheet" />

    <!-- Theme CSS -->
    <link href="@Url.Content("~/Content/assets/css/jquery.mmenu.css")" rel="stylesheet" />

    <!-- Page CSS -->
    <link href="@Url.Content("~/Content/assets/css/style.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/assets/css/add-ons.min.css")" rel="stylesheet" />

    <style>
        footer {
            display: none;
        }

        html, body {
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: Center;
        }
    </style>

    <!-- end: CSS file-->
    <!-- Head Libs -->
    @*<script src="@Url.Content("~/Content/assets/plugins/modernizr/js/modernizr.js")"></script>*@


</head>

<body style="background:url(/Content/Home/login_background.jpg) no-repeat;background-size:100% 100%">
    <!-- Start: Content -->
    <div class="container-fluid content">
        <div class="row">
            <!-- Main Page -->
            <div id="content" class="col-sm-12 full">
                <div class="row">
                    <div class="login-box">
                        <div class="panel">
                            <div class="panel-body">
                                <div class="bk-margin-bottom-20 text-center">
                                    <img src="@Url.Content("~/Content/Home/roechling_logo_print_de.png")" class="img-responsive" alt="" style="padding-left:60px;padding-top:15px;width:355px;" />
                                </div>
                                <form class="form-horizontal reset" action="@Url.Action("Reset","Home")" method="post">
                                    <span class="help-block" id="loginHelp" style="padding-left:20px;color:red;"></span>
                                    <div class="bk-padding-left-20 bk-padding-right-20">
                                        <div class="form-group">
                                            <label>@Resources.LAccount</label>
                                            <div class="input-group input-group-icon">
                                                <input type="text" class="form-control bk-radius" id="username" placeholder="Account" name="account" maxlength="50" value="@ViewBag.Account" disabled />
                                                <span class="help-block" id="usernameHelp" style="color:red;"></span>
                                                <span class="input-group-addon">
                                                    <span class="icon">
                                                        <i class="fa fa-user"></i>
                                                    </span>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label>@Resources.LPassword</label>
                                            <div class="input-group input-group-icon">
                                                <input type="password" class="form-control bk-radius" id="password" placeholder="Password" name="password" maxlength="50" />
                                                <span class="help-block" id="passwordHelp" style="color:red;"></span>
                                                <span class="input-group-addon">
                                                    <span class="icon">
                                                        <i class="fa fa-key"></i>
                                                    </span>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label>Confirm Password</label>
                                            <div class="input-group input-group-icon">
                                                <input type="password" class="form-control bk-radius" id="confirmPassword" placeholder="Confirm Password" name="ConfirmPassword" maxlength="50" />
                                                <span class="help-block" id="cpHelp" style="color:red;"></span>
                                                <span class="input-group-addon">
                                                    <span class="icon">
                                                        <i class="fa fa-key"></i>
                                                    </span>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="row bk-margin-top-20 bk-margin-bottom-10">
                                            <div class="col-sm-12 text-right">
                                                <button type="submit" class="btn btn-primary hidden-xs">Reset</button>
                                                <button type="submit" class="btn btn-primary btn-block btn-lg visible-xs bk-margin-top-20">Reset</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Main Page -->
        </div>
    </div>
    <input type="hidden" id="basepath" value="@ViewBag.BasePath" />
    <input type="hidden" id="culture" value="@ViewBag.CurrentCulture" />

    <!--/container-->
    <!-- start: JavaScript-->
    <!-- Vendor JS-->
    <script src="@Url.Content("~/Content/assets/vendor/js/jquery.min.js")?v=@CommonHelper.JsVision()"></script>
    <script src="@Url.Content("~/Content/assets/vendor/js/jquery-2.1.1.min.js")?v=@CommonHelper.JsVision()"></script>
    @*<script src="@Url.Content("~/Content/assets/vendor/js/jquery-migrate-1.2.1.min.js")"></script>*@
    @*<script src="@Url.Content("~/Content/assets/vendor/bootstrap/js/bootstrap.min.js")"></script>
        <script src="@Url.Content("~/Content/assets/vendor/skycons/js/skycons.js")"></script>*@

    <!-- Plugins JS-->
    @*<script src="@Url.Content("~/Content/assets/plugins/bootkit/js/bootkit.js")" ></script>*@
    <!-- Theme JS -->
    @*<script src="@Url.Content("~/Content/assets/js/jquery.mmenu.min.js")"></script>*@
    <!-- <script src="@Url.Content("~/Content/assets/js/core.min.js")" ></script>-->
    <!-- Pages JS -->
    <script src="@Url.Content("~/Content/Home/reset.js")?v=@CommonHelper.JsVision()"></script>
    <script type="text/javascript">
        var path = $("#basepath").val();
        var cult = $("#culture").val();
        var config = {
            basepath: path,
            culture: cult
        };
        PageInit(config);
    </script>

</body>

</html>
