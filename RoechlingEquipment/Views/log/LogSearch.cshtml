@{
    ViewBag.Title = "LogSearch";
}

@model List<Model.TableModel.LogModel> 

@if (ViewBag.IsDisplay)
{
    <div class="tm-body">
        <div class="tm-title">
            <h3 class="h5 text-uppercase">@ViewBag.FirstlogTime</h3>
        </div>
        <ol class="tm-items">
            @if (Model != null && Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <li>
                        <div class="tm-info">
                            <div class="tm-icon"><i class="fa fa-star" style="font-size:28px;"></i></div>
                            <time class="tm-datetime" datetime="@item.BLCreateTime">
                                <div class="tm-datetime-date bk-bg-white bk-radius text-center bk-padding-5" style="width:111px;">@item.BLCreateTime.ToString(Common.Costant.CommonConstant.DateTimeFormatDaySecondsExtend)</div>
                            </time>
                        </div>
                        <div class="tm-box">
                            <p>@item.BLFilterValue1</p>
                            <p>@item.BLLogDesc</p>
                            <div class="tm-meta">
                                <span>
                                    <i class="fa fa-user"></i> By <a href="#">@item.BLCreateUserName</a>
                                </span>
                            </div>
                        </div>
                    </li>
                }

            }
        </ol>
    </div>
}